generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PixelConfig {
  id          String   @id @default(cuid())
  pixelId     String   @unique
  accessToken String
  name        String?
  clientId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([pixelId])
}

model EventLog {
  id        String   @id @default(uuid())
  pixelId   String
  eventName String
  status    String
  payload   String?
  error     String?
  createdAt DateTime @default(now())

  @@index([pixelId])
  @@index([createdAt])
}
